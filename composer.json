{
    "name": "ucscode/doctrine-expression",
    "description": "A PHP class for handling SQL queries across different database platforms using Doctrine.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ucscode\\Doctrine\\Expression\\": "src/",
            "Ucscode\\Tests\\Doctrine\\Expression\\": "tests/"
        }
    },
    "require": {
        "doctrine/orm": "^3.2",
        "doctrine/dbal": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",        
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "test": "phpunit tests/",
        "cs-fix": "php-cs-fixer fix src/",
        "cs-check": "php-cs-fixer fix src/ --dry-run"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
